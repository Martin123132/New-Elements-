    <script>
        // Interactive model controls
        const zSlider = document.getElementById('zSlider');
        const nSlider = document.getElementById('nSlider');
        const energySlider = document.getElementById('energySlider');
        
        const zValue = document.getElementById('zValue');
        const nValue = document.getElementById('nValue');
        const energyValue = document.getElementById('energyValue');
        
        const stabilityIndex = document.getElementById('stabilityIndex');
        const halfLife = document.getElementById('halfLife');
        const crossSection = document.getElementById('crossSection');

        function updateModel() {
            const Z = parseInt(zSlider.value);
            const N = parseInt(nSlider.value);
            const E = parseFloat(energySlider.value);
            
            zValue.textContent = Z;
            nValue.textContent = N;
            energyValue.textContent = E;
            
            // MBT stability calculation
            const magicDistance = Math.abs(N - 184);
            const shellClosure = Math.max(0, 20 - magicDistance);
            const curvatureBalance = Math.max(0, 100 - Math.abs(Z - 120) * 2);
            const energyOptimal = Math.max(0, 100 - Math.abs(E - 4.9) * 20);
            
            const stability = Math.min(100, (shellClosure + curvatureBalance + energyOptimal) / 3);
            stabilityIndex.textContent = stability.toFixed(1);
            
            // Half-life calculation (exponential with stability)
            const baseHalfLife = Math.pow(10, (stability - 30) / 20); // seconds
            if (baseHalfLife < 60) {
                halfLife.textContent = `${baseHalfLife.toFixed(1)} seconds`;
            } else if (baseHalfLife < 3600) {
                halfLife.textContent = `${(baseHalfLife / 60).toFixed(1)} minutes`;
            } else {
                halfLife.textContent = `${(baseHalfLife / 3600).toFixed(1)} hours`;
            }
            
            // Cross-section (inversely related to difficulty)
            const cs = Math.max(0.1, 10 * Math.pow(stability / 100, 3));
            crossSection.textContent = `${cs.toFixed(1)} pb`;
        }

        function optimizeParameters() {
            // Set optimal values for maximum stability
            zSlider.value = 120;
            nSlider.value = 184;
            energySlider.value = 4.9;
            updateModel();
            
            // Add visual feedback
            document.querySelector('.atom-visualization').style.boxShadow = '0 0 50px rgba(100, 255, 218, 0.8)';
            setTimeout(() => {
                document.querySelector('.atom-visualization').style.boxShadow = 'none';
            }, 2000);
        }

        function simulateSynthesis() {
            const Z = parseInt(zSlider.value);
            const N = parseInt(nSlider.value);
            
            alert(`üî¨
