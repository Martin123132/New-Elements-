        function createPeriodicTable() {
            const table = document.getElementById('periodicTable');
            
            // Create a 9x18 grid (including lanthanide/actinide rows)
            for (let row = 1; row <= 9; row++) {
                for (let col = 1; col <= 18; col++) {
                    const element = elements.find(el => el.row === row && el.col === col);
                    const div = document.createElement('div');
                    
                    if (element) {
                        div.className = `element ${element.mbtClass}`;
                        div.innerHTML = `
                            <div class="atomic-number">${element.z}</div>
                            <div class="symbol">${element.symbol}</div>
                            <div class="mbt-class">${element.mbtClass.replace('-', ' ')}</div>
                        `;
                        div.onclick = () => showElementDetails(element);
                    } else {
                        div.className = 'element empty';
                    }
                    
                    table.appendChild(div);
                }
            }
        }

        function showElementDetails(element) {
            // Clear previous selection
            document.querySelectorAll('.element.selected').forEach(el => {
                el.classList.remove('selected');
            });
            
            // Select current element
            event.target.closest('.element').classList.add('selected');
            
            const detailsDiv = document.getElementById('elementDetails');
            const defaultProps = {
                curvature: 'Standard atomic curvature well',
                motion: 'Typical electron orbital motion',
                memory: 'Standard shell memory effects',
                resonance: 'Normal energy level spacing'
            };
            
            const props = element.mbtProps || defaultProps;
            
            detailsDiv.innerHTML = `
                <h2>${element.name} (${element.symbol})</h2>
                <p><strong>Atomic Number:</strong> ${element.z}</p>
                <p><strong>MBT Classification:</strong> ${element.mbtClass.replace('-', ' ').toUpperCase()}</p>
                
                <h3>MBT Properties:</h3>
                <div class="mbt-property">
                    <strong>Curvature Field:</strong> ${props.curvature}
                </div>
                <div class="mbt-property">
                    <strong>Motion Dynamics:</strong> ${props.motion}
                </div>
                <div class="mbt-property">
                    <strong>Memory Effects:</strong> ${props.memory}
                </div>
                <div class="mbt-property">
                    <strong>Resonance Pattern:</strong> ${props.resonance}
                </div>
                
                <h3>MBT Predictions:</h3>
                <div class="mbt-property">
                    <strong>Stability Index:</strong> ${calculateStabilityIndex(element)}
                </div>
                <div class="mbt-property">
                    <strong>Curvature Strength:</strong> ${calculateCurvatureStrength(element)}
                </div>
                <div class="mbt-property">
                    <strong>Motion Complexity:</strong> ${calculateMotionComplexity(element)}
                </div>
            `;
        }

        function calculateStabilityIndex(element) {
            // MBT stability based on curvature well depth and electron configuration
            const magicNumbers = [2, 10, 18, 36, 54, 86, 118];
            const nearestMagic = magicNumbers.reduce((prev, curr) => 
                Math.abs(curr - element.z) < Math.abs(prev - element.z) ? curr : prev
            );
            const distance = Math.abs(element.z - nearestMagic);
            const stability = Math.max(0, 100 - distance * 3);
            
            if (element.mbtClass === 'field-drift') return `${stability + 20}/100 (Noble gas stability)`;
            if (element.mbtClass === 'quantum-bridge') return `${Math.min(stability, 30)}/100 (Synthetic instability)`;
            if (element.mbtClass === 'memory-anchor') return `${stability + 10}/100 (Enhanced by memory)`;
            
            return `${stability}/100`;
        }

        function calculateCurvatureStrength(element) {
            // Curvature strength increases with nuclear charge but decreases with shell shielding
            const baseStrength = Math.sqrt(element.z) * 10;
            const shielding = Math.floor((element.z - 1) / 8) * 5; // Rough shell estimate
            const netStrength = Math.max(10, baseStrength - shielding);
            
            if (element.mbtClass === 'curvature-core') return `${netStrength + 20} (Strong binding)`;
            if (element.mbtClass === 'spiral-transition') return `${netStrength + 10} (d-orbital complexity)`;
            if (element.mbtClass === 'echo-resonant') return `${netStrength + 15} (f-orbital resonance)`;
            
            return `${netStrength}`;
        }

        function calculateMotionComplexity(element) {
            // Motion complexity based on electron configuration and orbital types
            let complexity = 0;
            
            // s-block: simple
            if (element.col <= 2) complexity += 10;
            // p-block: moderate
            if (element.col >= 13 && element.col <= 18) complexity += 20;
            // d-block: complex
            if (element.col >= 3 && element.col <= 12) complexity += 40;
            // f-block: very complex
            if (element.row >= 8) complexity += 60;
            
            // Add complexity for heavy elements
            complexity += Math.floor(element.z / 20) * 5;
            
            if (complexity < 20) return `${complexity} (Simple s-orbital motion)`;
            if (complexity < 40) return `${complexity} (Moderate p-orbital patterns)`;
            if (complexity < 60) return `${complexity} (Complex d-orbital dynamics)`;
            return `${complexity} (Highly complex f-orbital resonance)`;
        }

        function highlightClass(className) {
            // Hide all elements
            document.querySelectorAll('.element').forEach(el => {
                el.style.opacity = '0.2';
                el.style.transform = 'scale(0.8)';
            });
            
            // Show only selected class
            document.querySelectorAll(`.${className}`).forEach(el => {
                el.style.opacity = '1';
                el.style.transform = 'scale(1)';
            });
        }

        function clearHighlight() {
            document.querySelectorAll('.element').forEach(el => {
                el.style.opacity = '1';
                el.style.transform = 'scale(1)';
            });
        }

        // Initialize the periodic table
        createPeriodicTable();

        // Add some dynamic MBT field visualization
        function addFieldVisualization() {
            const style = document.createElement('style');
            style.textContent = `
                @keyframes curvatureFlow {
                    0% { box-shadow: 0 0 5px rgba(255, 64, 129, 0.3); }
                    50% { box-shadow: 0 0 20px rgba(255, 64, 129, 0.7); }
                    100% { box-shadow: 0 0 5px rgba(255, 64, 129, 0.3); }
                }
                
                @keyframes motionFlow {
                    0% { box-shadow: 0 0 5px rgba(64, 196, 255, 0.3); }
                    50% { box-shadow: 0 0 20px rgba(64, 196, 255, 0.7); }
                    100% { box-shadow: 0 0 5px rgba(64, 196, 255, 0.3); }
                }
                
                @keyframes memoryFlow {
                    0% { box-shadow: 0 0 5px rgba(100, 255, 218, 0.3); }
                    50% { box-shadow: 0 0 20px rgba(100, 255, 218, 0.7); }
                    100% { box-shadow: 0 0 5px rgba(100, 255, 218, 0.3); }
                }
                
                @keyframes spiralFlow {
                    0% { box-shadow: 0 0 5px rgba(255, 171, 64, 0.3); }
                    50% { box-shadow: 0 0 20px rgba(255, 171, 64, 0.7); }
                    100% { box-shadow: 0 0 5px rgba(255, 171, 64, 0.3); }
                }
                
                @keyframes echoFlow {
                    0% { box-shadow: 0 0 5px rgba(171, 71, 188, 0.3); }
                    50% { box-shadow: 0 0 20px rgba(171, 71, 188, 0.7); }
                    100% { box-shadow: 0 0 5px rgba(171, 71, 188, 0.3); }
                }
                
                .curvature-core { animation: curvatureFlow 3s ease-in-out infinite; }
                .motion-shell { animation: motionFlow 2.5s ease-in-out infinite; }
                .memory-anchor { animation: memoryFlow 4s ease-in-out infinite; }
                .spiral-transition { animation: spiralFlow 2s ease-in-out infinite; }
                .echo-resonant { animation: echoFlow 3.5s ease-in-out infinite; }
            `;
            document.head.appendChild(style);
        }

        // Add field visualization after a short delay
        setTimeout(addFieldVisualization, 1000);

        // Add theoretical MBT predictions panel
        function addMBTPredictions() {
            const predictionsDiv = document.createElement('div');
            predictionsDiv.className = 'details-panel';
            predictionsDiv.innerHTML = `
                <h3>🌟 MBT Theoretical Predictions</h3>
                
                <div class="mbt-property">
                    <strong>Island of Stability (Z=114-126):</strong> Enhanced curvature wells from shell closure effects. Elements 114, 120, 126 predicted to have extended half-lives due to spherical shell magic numbers creating stable curvature geometry.
                </div>
                
                <div class="mbt-property">
                    <strong>Super-Heavy Noble Gas (Z=118, Oganesson):</strong> MBT predicts incomplete field drift behavior due to relativistic curvature effects. May show metallic properties despite noble gas electron configuration.
                </div>
                
                <div class="mbt-property">
                    <strong>Electron Shell Anomalies:</strong> Elements beyond Z=100 show curvature-driven orbital inversions. 7p orbitals may fill before 6d completion due to relativistic motion-curvature coupling.
                </div>
                
                <div class="mbt-property">
                    <strong>Chemical Property Predictions:</strong>
                    <br>• Z=119: Extreme motion-shell behavior, high reactivity
                    <br>• Z=120: Memory-anchor with alkaline earth-like properties  
